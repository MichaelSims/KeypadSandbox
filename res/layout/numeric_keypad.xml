<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:stretchColumns="*"
             android:shrinkColumns="*">
    <TableRow
            android:layout_weight="1">
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadOne"
                android:text="1"/>
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadTwo"
                android:text="2"/>
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadThree"
                android:text="3"/>
    </TableRow>
    <TableRow
            android:layout_weight="1">
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadFour"
                android:text="4"/>
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadFive"
                android:text="5"/>
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadSix"
                android:text="6"/>
    </TableRow>
    <TableRow
            android:layout_weight="1">
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadSeven"
                android:text="7"/>
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadEight"
                android:text="8"/>
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadNine"
                android:text="9"/>
    </TableRow>
    <TableRow
            android:layout_weight="1">
        <FrameLayout
                style="@style/keypadButton"
                android:id="@+id/keypadBlank"/>
        <TextView
                style="@style/keypadButton"
                android:id="@+id/keypadZero"
                android:text="0"/>
        <ImageView
                style="@style/keypadButton"
                android:id="@+id/keypadBackspace"
                android:scaleType="center"
                android:src="@drawable/delete_button"/>
    </TableRow>
</TableLayout>